<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="index"
            type="Integer" />

        <variable
            name="clickHandler"
            type="com.siddroid.gallery.OnPhotoClickListener" />
    </data>
<com.siddroid.gallery.customview.RatioImageView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imvThumb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:onClick="@{() -> clickHandler.onPhotoClicked(index)}"
    tools:src="@drawable/ic_launcher_background" />
</layout>
